{
  "manifest_version": 3,
  "name": "Qlty",
  "version": "1.0",
  "description": "Universal code quality tool",
  "permissions": ["activeTab", "storage"],
  "action": {
    "default_title": "Qlty Settings",
    "default_popup": "dist/src/settings.html"
  },
  "content_scripts": [
    {
      "matches": [
        "https://github.com/*/pull/*",
        "https://github.com/*/commit/*"
      ],
      "css": ["dist/coverage.css"],
      "js": ["dist/coverage.js"]
    },
    {
      "matches": [
        "https://qlty.sh/auth/browser?*",
        "http://localhost:3000/auth/browser?*"
      ],
      "js": ["dist/auth.js"]
    }
  ],
  "host_permissions": ["https://api.qlty.sh/*", "http://localhost:3001/*"],
  "background": {
    "service_worker": "dist/service_worker.js"
  },
  "icons": {
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
